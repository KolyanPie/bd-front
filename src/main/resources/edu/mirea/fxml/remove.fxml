<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/10.0.2-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.mirea.fxml.Remove">
    <HBox alignment="CENTER">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <opaqueInsets>
            <Insets/>
        </opaqueInsets>
        <Label text="WHERE"/>
        <Button mnemonicParsing="false" onAction="#plus" text="AND"/>
        <Button mnemonicParsing="false" onAction="#plus" text="OR"/>
        <Button mnemonicParsing="false" onAction="#backspace" text="BACKSPACE"/>
    </HBox>
    <ScrollPane hbarPolicy="ALWAYS" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="150.0">
        <HBox fx:id="hBox" alignment="CENTER_LEFT"/>
    </ScrollPane>
    <Button mnemonicParsing="false" text="remove" onAction="#click">
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
    </Button>
</VBox>
